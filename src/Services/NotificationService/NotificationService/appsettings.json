{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=NotificationServiceDb;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "NotificationSettings": {
    "MaxRetryAttempts": 3,
    "RetryDelayMinutes": 5,
    "BatchSize": 100,
    "RateLimiting": {
      "EmailPerMinute": 60,
      "SmsPerMinute": 10,
      "PushPerMinute": 1000
    }
  },
  "ExternalServices": {
    "SendGrid": {
      "ApiKey": "your-sendgrid-api-key-here",
      "FromEmail": "noreply@airbnb-platform.com",
      "FromName": "AirBnB Platform"
    },
    "Twilio": {
      "AccountSid": "your-twilio-account-sid-here",
      "AuthToken": "your-twilio-auth-token-here",
      "FromNumber": "+1234567890"
    },
    "Firebase": {
      "ServerKey": "your-firebase-server-key-here",
      "SenderId": "your-firebase-sender-id-here"
    }
  },
  "FeatureFlags": {
    "EnableScheduledNotifications": true,
    "EnableBulkNotifications": true,
    "EnableRetryMechanism": true,
    "EnableDeliveryTracking": true,
    "EnableTemplatePreview": true
  }
}