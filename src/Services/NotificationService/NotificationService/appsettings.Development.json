{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=notificationservice.db"
  },
  "NotificationSettings": {
    "MaxRetryAttempts": 1,
    "RetryDelayMinutes": 1,
    "BatchSize": 10,
    "RateLimiting": {
      "EmailPerMinute": 10,
      "SmsPerMinute": 2,
      "PushPerMinute": 100
    }
  },
  "ExternalServices": {
    "SendGrid": {
      "ApiKey": "mock-sendgrid-key",
      "FromEmail": "dev@airbnb-platform.com",
      "FromName": "AirBnB Platform (Dev)"
    },
    "Twilio": {
      "AccountSid": "mock-twilio-sid",
      "AuthToken": "mock-twilio-token",
      "FromNumber": "+1234567890"
    },
    "Firebase": {
      "ServerKey": "mock-firebase-key",
      "SenderId": "mock-sender-id"
    }
  },
  "FeatureFlags": {
    "EnableScheduledNotifications": true,
    "EnableBulkNotifications": true,
    "EnableRetryMechanism": true,
    "EnableDeliveryTracking": true,
    "EnableTemplatePreview": true
  }
}